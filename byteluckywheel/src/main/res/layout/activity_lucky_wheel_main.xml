<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171715"
    android:orientation="vertical"
    tools:context=".LuckyWheelMainActivity">

    <include layout="@layout/title"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.bytetrade.bytehub.byteluckywheel.PointView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_500"
                    android:scaleType="fitXY"
                    android:src="@drawable/lucky_background" />

                //小喇叭通知

                <com.bytetrade.bytehub.byteluckywheel.CircleView
                    android:id="@+id/circleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_85"
                    android:layout_marginTop="@dimen/dp_49"
                    android:layout_marginRight="@dimen/dp_70"
                    android:background="@drawable/shape_top_rect"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:src="@drawable/lucky_horn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_46"
                        android:text="恭喜XXXX抽中"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_58"
                        android:text="0.1"
                        android:textColor="#E2D794"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_26"
                        android:text="BTC"
                        android:textColor="#E2D794"
                        android:textSize="@dimen/dp_12" />

                </RelativeLayout>

                <com.bytetrade.bytehub.byteluckywheel.PointView
                    android:id="@+id/circlepan"
                    android:layout_width="@dimen/dp_318"
                    android:layout_height="@dimen/dp_318"
                    android:layout_gravity="center"
                    android:src="@drawable/lucky_picture_turntable" />


                <com.bytetrade.bytehub.byteluckywheel.PointView
                    android:id="@+id/node2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_55"
                    android:src="@drawable/lucky_node2" />

                <com.bytetrade.bytehub.byteluckywheel.LuckySwapBottomView
                    android:id="@+id/pointview"
                    android:layout_width="@dimen/dp_108"
                    android:layout_height="@dimen/dp_108"
                    android:layout_gravity="center"
                    android:src="@drawable/lucky_node" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_12">

                    <com.bytetrade.bytehub.byteluckywheel.PointView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lucky_money" />

                    <com.bytetrade.bytehub.byteluckywheel.PointView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="@dimen/dp_8"
                        android:src="@drawable/lucky_dayuhao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_4"
                        android:text="23.20056345 ETH"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/dp_12" />

                </FrameLayout>


                <com.bytetrade.bytehub.byteluckywheel.LuckySwapImageView
                    android:id="@+id/luckyswapview"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/lucky_btn_cost_grey" />

                <com.bytetrade.bytehub.byteluckywheel.LuckySwapLoadingView
                    android:id="@+id/luckyloadingview"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/lucky_loading_1"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="@dimen/dp_49"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_17"
                        android:text="免费抽奖机会：3"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/dp_12" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_26"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/dp_22"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/lucky_congratulations" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="获 取"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/dp_12" />

                </RelativeLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_20">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="@dimen/dp_14"
                        android:src="@drawable/lucky_help" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规 则"
                        android:textColor="#E2D794"
                        android:textSize="@dimen/dp_12"/>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_color_shen"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36">

                    <View
                        android:id="@+id/button_view"
                        android:layout_width="@dimen/dp_137"
                        android:layout_height="@dimen/dp_28"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_color_qian"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/record"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="全部记录"
                                android:textColor="#E2D794"
                                android:textSize="@dimen/dp_14" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/gift"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="fill_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="我的奖品"
                                android:textColor="#E2D794"
                                android:textSize="@dimen/dp_14" />

                        </RelativeLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_255"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_25"
                android:background="@drawable/shape_color_shen"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/user"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="用 户"
                            android:textColor="#E2D794"
                            android:textSize="@dimen/dp_12" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/present"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center"
                            android:text="奖 品"
                            android:textColor="#E2D794"
                            android:textSize="@dimen/dp_12" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:gravity="center"
                            android:text="时 间"
                            android:textColor="#E2D794"
                            android:textSize="@dimen/dp_12" />

                    </RelativeLayout>

                </LinearLayout>

                <include layout="@layout/recyclerview"></include>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>




